<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/overlay_button_ripple">
    <item android:id="@android:id/background">
        <inset android:insetTop="4dp" android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="?android:bool/config_allowTheaterModeWakeFromUnplug"/>
                <corners android:radius="20dp"/>
                <size android:height="40dp"/>
            </shape>
        </inset>
    </item>
    <item android:id="@android:id/mask">
        <inset android:insetTop="4dp" android:insetBottom="4dp">
            <shape android:shape="rectangle">
                <solid android:color="?android:attr/textColorPrimary"/>
                <corners android:radius="20dp"/>
                <size android:height="40dp"/>
            </shape>
        </inset>
    </item>
</ripple>
