<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <Space android:id="@+id/space_above_title" android:layout_width="match_parent" android:layout_height="40dp"/>
    <TextView android:textColor="@color/nt_biometric_title_color" android:ellipsize="marquee" android:gravity="left|right|center_horizontal|fill_horizontal" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="1" style="@style/TextAppearance.AuthCredential.Title"/>
    <TextView android:textColor="@color/nt_biometric_subtitle_color" android:ellipsize="marquee" android:gravity="left|right|center_horizontal|fill_horizontal" android:id="@+id/subtitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="1" style="@style/TextAppearance.AuthCredential.Subtitle"/>
    <TextView android:textColor="@color/nt_biometric_subtitle_color" android:gravity="left|right|center_horizontal|fill_horizontal" android:id="@+id/description" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/TextAppearance.AuthCredential.Description"/>
    <FrameLayout android:id="@+id/space_above_icon" android:layout_width="match_parent" android:layout_height="122dp">
        <TextView android:textSize="12sp" android:textColor="@color/nt_biometric_title_color" android:ellipsize="marquee" android:gravity="center_horizontal" android:layout_gravity="bottom" android:id="@+id/indicator" android:paddingBottom="36dp" android:fadingEdge="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:scrollHorizontally="true" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever" android:fontFamily="roboto-regular" android:accessibilityLiveRegion="polite" android:paddingHorizontal="24dp"/>
        <ImageView android:gravity="center_horizontal" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/indicator_icon" android:paddingBottom="36dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/nt_biometric_arrow" android:scaleType="fitXY" android:contentDescription="@null"/>
    </FrameLayout>
    <FrameLayout android:layout_gravity="center_horizontal" android:id="@+id/biometric_icon_frame" android:clipChildren="false" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@+id/biometric_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitXY" android:contentDescription="@null"/>
    </FrameLayout>
    <Space android:id="@+id/space_below_icon" android:layout_width="match_parent" android:layout_height="12dp"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/button_bar" android:paddingTop="0dp" android:paddingBottom="40dp" android:layout_width="match_parent" android:layout_height="88dp" style="?android:attr/buttonBarStyle">
        <Space android:id="@+id/leftSpacer" android:visibility="visible" android:layout_width="24dp" android:layout_height="match_parent"/>
        <Button android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/button_negative" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/biometric_dialog_button_negative_max_width" android:maxLines="2" style="@style/Nothing.AuthCredential.Button"/>
        <Button android:layout_gravity="bottom" android:id="@+id/button_cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/biometric_dialog_button_negative_max_width" android:text="@string/cancel" style="@style/Nothing.AuthCredential.Button"/>
        <Button android:layout_gravity="bottom" android:id="@+id/button_use_credential" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/biometric_dialog_button_negative_max_width" style="@style/Nothing.AuthCredential.Button"/>
        <Space android:id="@+id/middleSpacer" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <Button android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/button_confirm" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/biometric_dialog_button_positive_max_width" android:text="@string/biometric_dialog_confirm" android:maxLines="2" style="@style/Nothing.AuthCredential.Button"/>
        <Button android:ellipsize="end" android:layout_gravity="bottom" android:id="@+id/button_try_again" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="@dimen/biometric_dialog_button_positive_max_width" android:text="@string/biometric_dialog_try_again" android:maxLines="2" style="@style/Nothing.AuthCredential.Button"/>
        <Space android:id="@+id/rightSpacer" android:visibility="visible" android:layout_width="24dp" android:layout_height="match_parent"/>
    </LinearLayout>
</merge>
