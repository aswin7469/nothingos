<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="32dp" android:layout_height="28dp" android:src="@drawable/critical_temperature_warning"/>
        <TextView android:textSize="24sp" android:textColor="#d71921" android:gravity="center" android:id="@+id/critical_temperature_warning_title" android:layout_width="270dp" android:layout_height="32dp" android:text="@string/critical_temperature_warning_title" android:lineSpacingExtra="3sp" android:fontFamily="NDot57"/>
        <TextView android:textSize="16sp" android:textColor="#f0f2f2" android:gravity="center" android:id="@+id/critical_temperature_warning_content" android:layout_width="270dp" android:layout_height="48dp" android:text="@string/critical_temperature_warning_content" android:lineSpacingExtra="5sp" android:letterSpacing="0.01"/>
    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#000000" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/emergency_call" android:background="@drawable/temperature_emergency_shape" android:layout_width="103dp" android:layout_height="40dp" android:layout_marginBottom="48dp" android:text="Emergency" android:lineSpacingExtra="4sp"/>
</FrameLayout>
