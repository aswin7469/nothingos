<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/internet_container" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/wifi_list" android:layout_height="72dp" android:paddingStart="20dp" android:paddingEnd="24dp" style="@style/InternetDialog.Network">
        <FrameLayout android:layout_gravity="start|center_vertical" android:clickable="false" android:layout_width="24dp" android:layout_height="24dp">
            <ImageView android:layout_gravity="center" android:id="@+id/wifi_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout android:gravity="start|center_vertical" android:orientation="vertical" android:id="@+id/wifi_network_layout" android:clickable="false" android:layout_width="wrap_content" android:layout_height="72dp" android:layout_weight="1" android:layout_marginEnd="30dp">
            <TextView android:textSize="14sp" android:id="@+id/wifi_title" style="@style/InternetDialog.NetworkTitle"/>
            <TextView android:id="@+id/wifi_summary" style="@style/InternetDialog.NetworkSummary"/>
        </LinearLayout>
        <FrameLayout android:layout_gravity="end|center_vertical" android:clickable="false" android:layout_width="24dp" android:layout_height="match_parent">
            <ImageView android:layout_gravity="end|center_vertical" android:id="@+id/wifi_end_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
