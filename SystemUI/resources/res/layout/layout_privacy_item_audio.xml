<?xml version="1.0" encoding="utf-8"?>
<com.nothing.systemui.p024qs.MicModeView xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/mic_standard" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/mic_standard_img" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/mic_standard" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/mic_mode_standard" android:layout_toRightOf="@+id/mic_standard_img" android:layout_centerVertical="true"/>
        <RadioButton android:id="@+id/mic_standard_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/voice_focus" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/voice_focus_img" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/mic_voice_focus" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/mic_mode_voice_focus" android:layout_toRightOf="@+id/voice_focus_img" android:layout_centerVertical="true"/>
        <RadioButton android:id="@+id/voice_focus_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/ambient_sound" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/ambient_sound_img" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/mic_ambient_sound" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/mic_mode_ambient_sound" android:layout_toRightOf="@+id/ambient_sound_img" android:layout_centerVertical="true"/>
        <RadioButton android:id="@+id/ambient_sound_radio" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</com.nothing.systemui.p024qs.MicModeView>
